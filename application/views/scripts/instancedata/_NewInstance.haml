- $localStylesheets = array('instancedata')
- $localJavascript = array('instancedata')

!= $this->form(null, false, 'post', array('class' => 'NewInstance'))
%table
  %tr
    %td Instance Name:
    %td
      != $this->formText('instanceName', '', array('size' => 50))
  %tr
    %td Import Responses:
  %tr
    - if ($this->newInstanceImportResponsesRadioButton === 'newInstanceDoNotImportAnyResponses' || !$this->newInstanceImportResponsesRadioButton)
      %td
        <input type="radio" name="newInstanceImportResponsesRadioButton" value="newInstanceDoNotImportAnyResponses" class="newInstanceImportResponsesRadioButton" checked="1" />Do not import any responses
    - else
      %td
        <input type="radio" name="newInstanceImportResponsesRadioButton" value="newInstanceDoNotImportAnyResponses" class="newInstanceImportResponsesRadioButton"/>Do not import any responses
  %tr
    - if ($this->newInstanceImportResponsesRadioButton === 'newInstanceImportInstanceResponses')
      %td
        <input type="radio" name="newInstanceImportResponsesRadioButton" value="newInstanceImportInstanceResponses" class="newInstanceImportResponsesRadioButton" checked="1"/>Import Instance Responses
    - else
      %td
        <input type="radio" name="newInstanceImportResponsesRadioButton" value="newInstanceImportInstanceResponses" class="newInstanceImportResponsesRadioButton" />Import Instance Responses
  %tr
    %td
      #disableNewInstanceImportResponses{ 'style' => 'display: none;' }
        .option
          != $this->formLabel('instrument', 'Questionnaire:')
          != $this->instrumentSelect($this->newInstanceResponsesInstrumentID, 'newInstanceResponsesInstrumentSelect')
        .option
          != $this->formLabel('instance', 'Instance:')
          != $this->instanceSelect($this->dataInstances, $this->newInstanceResponsesInstrumentID, 'newInstanceResponsesInstanceSelect', $this->newInstanceResponsesInstanceID)          
%br/          
!= $this->linkTo('#NewInstance', $this->formButton('NewInstance', 'Submit'), array('class' => 'dataButton'))
!= $this->form(null, true)
