- $id = (isset($this->menu['page'])) ? "page-{$this->menu['page']->pageID}" : ''

%li{ 'id' => $id, 'url' => $this->menu['url'] }
  - if(isset($this->menu['page']))
    != $this->formHidden('disableCount', $this->menu['page']->disableCount)
  - if($this->menu['current'])
    .current
      = $this->menu['label']
      != $this->lockIcon($this->menu, $this->loggedInUser)
  - elseif(isset($this->menu['page']) && $this->menu['page']->disableCount > 0)
    .disabled
      = $this->menu['label']
      != $this->lockIcon($this->menu, $this->loggedInUser)
  - else
    %div
      != $this->linkTo($this->menu['url'], $this->h($this->menu['label']))
      != $this->lockIcon($this->menu, $this->loggedInUser)
