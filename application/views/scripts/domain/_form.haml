- $label = ((isset($this->label)) ? $this->label : 'create') . ' domain'

#domainForm
  != $this->form(array('action' => (isset($this->action)) ? $this->action : 'create'), false, 'post')
  - if($this->form !== null)
    != $this->formHidden('domainID', $this->form->domainID)
  != $this->formHidden('indexUrl', $this->url(array('action' => 'index', 'id' => null)))
  %h2= $label
  %ul
    %li
      != $this->formLabel('domainDescripton', 'Description')
      != $this->formText('domainDescription', ($this->form !== null) ? $this->h($this->form->domainDescription) : null, array('size' => 30))
    %li
      != $this->formSubmit('submitButton', $label)
      - if(isset($this->action) && $this->action === 'modify')
        != $this->formButton('cancelButton', 'cancel')
  != $this->form(null, true)
