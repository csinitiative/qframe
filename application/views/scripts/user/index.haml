- $localStylesheets = array('search', 'paged', 'users')
- $localJavascript = array('search', 'pagination', 'users')

%form{ 'method' => 'get', 'id' => 'userSearch', 'class' => 'searchForm' }  
  != $this->formText('q', $this->q, array('size' => 25, 'original' => $this->q))
  != $this->linkTo('#', $this->imageTag('x.gif'), array('class' => 'closeButton', 'style' => 'display: none;'))
  != $this->formHidden('baseUrl', $this->url(array('action' => 'index')))
  
%h2.padded
  users 
  - if (DbUserModel::count())
    - if ($this->pager->last())
      %em= "({$this->pager->first()} - {$this->pager->last()} of " . $this->pager->total() . ")"
    - else
      %em= "(0 of " . $this->pager->total() . ")"
  - else 
    %em (none exist)

.pageContainer
  != $this->renderPartial('user', $this->pager->current(), true)
  != $this->pagination($this->pager, 'index', 'page', array('q' => $this->q))
 
!= $this->renderPartial('form', null, false)
