- $localStylesheets = array('tabs', 'approve', 'getting_started')
- $localJavascript = array('tabs', 'approve', 'getting_started', 'cookies')

!= $this->topLinks($this->tab, $this->loggedInUser)

%h1
  = $this->tab->tabHeader
  - if(count($this->tab->references) > 0)
    %a#toggleTabReferences{ 'href' => '#' } show references
    #tabReferences{ 'style' => 'display: none;' }
      != $this->referenceString($this->tab)

- if(!$this->isBlank($this->tab->headerText))
  != $this->markdown($this->h($this->tab->headerText))
  
!= $this->form(array('action' => 'approve', 'id' => $this->tab->tabID), false, 'post', array('class' => 'questions'))
!= $this->formHidden('cancelPath', $this->url(array('action' => 'view')))

- while(($section = $this->tab->nextSection()))
  != $this->renderPartial('section', $section)

#formControls
  != $this->linkTo('#save', $this->imageTag('icons/dddddd/disk.png'), array('class' => 'controlButton'))
  != $this->linkTo('#cancel', $this->imageTag('icons/dddddd/cancel.png'), array('class' => 'controlButton'))
    
!= $this->form(null, true)

- if(!$this->isBlank($this->tab->footerText))
  != $this->markdown($this->h($this->tab->footerText))

#disableOverlay{ 'style' => 'display: none;' }
  .content
    Saving
    != $this->imageTag('progress-large-black.gif')
    
!= $this->renderPartial('getting_started', null)